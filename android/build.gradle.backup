buildscript {
    ext {
        buildToolsVersion = "31.0.0"
        minSdkVersion = 21
        compileSdkVersion = 31
        targetSdkVersion = 31
        kotlinVersion = "1.7.0"
    }
    repositories {
        google()
        mavenCentral()
        maven {
            url("$rootDir/../node_modules/react-native/android")
        }
        maven {
            url("https://www.jitpack.io")
        }
    }
    dependencies {
        classpath("com.android.tools.build:gradle:7.4.2")
        // React Native gradle plugin is now included in @react-native-community/cli-platform-android
        classpath("org.jetbrains.kotlin:kotlin-gradle-plugin:1.7.0")  // 直接指定版本号
    }
}

allprojects {
    repositories {
        google()
        mavenCentral()
        maven {
            url("$rootDir/../node_modules/react-native/android")
        }
        maven {
            url("https://www.jitpack.io")
        }
    }
}